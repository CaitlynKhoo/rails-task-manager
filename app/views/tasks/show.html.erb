<div class="container">
<div class="d-flex justify-content-between">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-light text-center"%>
</div>
  <p class="card card-body"><%= @task.details %></p>
  <%= form_with model: @task do |f| %>
    <%= f.check_box :completed %>
    <%= f.label :completed, "Task not completed yet" %>
  <% end %>
  <%= link_to "Back to list", tasks_path %>
</div>
