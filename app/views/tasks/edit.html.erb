<div class="container">
<h1>Edit task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title, class: "form-control mb-3"%>
  <%= f.label :Details %>
  <%= f.text_field :details, class: "form-control mb-3"%>
  <%= f.check_box :completed %>
  <%= f.label :status, "Completed", class: "mb-3"%>
<br>
  <%= f.submit class: "btn btn-primary mb-3"%>
<% end %>

<%= link_to "Back to lists", tasks_path %>

</div>
